@page "/event-created/{id}"
@model Reserve.Pages.Event.CreationNotificationModel
<h1 class="notification-title mb-lg-5">Event Created Successfully!</h1>
<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="notification-border mb-lg-5">
        <div>
            <p class="notification-text d-flex justify-content-center mb-1">You can now share your Event on this &nbsp;<a href="@Url.Page("EventDetails", new {id = Model.Id})"> link</a></p>
        </div>
        <div>
            <p class="notification-text d-flex justify-content-center mb-1">If you don’t have an account, you can still edit your event at
                this &nbsp; <a href="@Url.Page("ViewAttendees", new {id = Model.Id})">link</a>
            </p>  
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <a href="@Url.Page("ViewAttendees", new {id=Model.Id})" class="btn btn-custom reserve-blue-button">View and Edit Event details</a>
    </div>
</div>