@page "{id}"
@model Reserve.Pages.Appointment.MeetingNotificationModel
<h1 class="notification-title mb-lg-5">Appointment Reserved!</h1>
<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="notification-border mb-lg-5">
        <div>
            <p class="notification-text d-flex justify-content-center mb-1">
                Congratulations, you have successfully reserved an appointment! 🎉
                You can edit your reservation details by using this link:
            </p>
            <a class="d-flex justify-content-center mb-md-2" href="@Url.Page("UserAppointmentDashboard", new {id = Model.Id})">www.reserve.com/appointment/@Model.Id</a>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <a href="/" class="btn btn-custom reserve-blue-button">Home Page</a>
    </div>
</div>
