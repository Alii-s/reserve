@page "{id}"
@model Reserve.Pages.Appointment.AppointmentRescheduleNotificationModel

<h1 class="notification-title mb-lg-5">Appointment Rescheduling successful!</h1>
<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="notification-border mb-lg-5">
        <div>
            <p class="notification-text d-flex justify-content-center mb-1">
                You have rescheduled successfully! Please check details in your dashboard.
            </p>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <a href="@Url.Page("UserAppointmentDashboard", new {id = Model.Id})" class="btn btn-custom reserve-blue-button">Back to dashboard</a>
    </div>
</div>