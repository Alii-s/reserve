@page
@model Reserve.Pages.Appointment.CreateAppointmentCalendarModel
    

        
<div id="second-half" style="display:none">
    <form method="post"> 
        <h1 class="notification-title mb-lg-5">Upload Your schedule!</h1>
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="notification-border mb-lg-5">
                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-evenly">
                        <div class="col-1">
                            <label asp-for="NewAvailabilitySlot" class="form-label">Availability</label>
                        </div>
                        @Html.DropDownListFor(m => m.SelectedDay, new SelectList(Model.DaysList), new { @class = "form-control w-25" })
                        <input asp-for="NewAvailabilitySlot.StartTime" type="time" name="NewAvailabilitySlot.StartTime" class="form-control w-25" />
                        <input asp-for="NewAvailabilitySlot.EndTime" type="time" name="NewAvailabilitySlot.EndTime" class="form-control w-25" />
                    </div>
                    <span asp-validation-for="NewAppointmentCalendar.Name" class="text-danger d-flex justify-content-center p-3"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-custom reserve-blue-button">Continue</button>
        </div>
    </form>
</div>
    








